<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	<changeSet context="production"  id="add-supported-app-nexus" author="amalhao">
		<insert tableName="SupportedApp">
			<column name="lcName">nexus</column>
			<column name="name">Nexus</column>
			<column name="minVersion">2.10</column>
			<column name="maxVersion">2.11.4</column>
		</insert>
	</changeSet>
	<changeSet context="production"  id="add-credentials-table" author="rgiddings">
		<createTable tableName="Credentials">
			<column name="id" autoIncrement="true" startWith="1" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
			<column name="user_id" type="BIGINT"/>
			<column name="type" type="VARCHAR(255)"/>
			<column name="name" type="VARCHAR(255)"/>
			<column name="data" type="VARCHAR(255)"/>
		</createTable>
		<addForeignKeyConstraint baseColumnNames="user_id" baseTableName="Credentials"
		                         constraintName="FK_credentials_user" deferrable="false"
		                         initiallyDeferred="false"
		                         onDelete="CASCADE" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="CVUser"/>
	</changeSet>
	<changeSet context="production"  id="add-widget-configs" author="mmuschol">
		<createTable tableName="WidgetConfig">
			<column autoIncrement="true" startWith="1" name="id" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
			<column defaultValueNumeric="0" name="user_id" type="BIGINT">
				<constraints nullable="false"/>
			</column>
			<column name="widgetId" type="BIGINT"/>
			<column name="widgetType" type="VARCHAR(255)"/>
			<column name="config" type="VARCHAR(1024)"/>
		</createTable>
		<addForeignKeyConstraint baseColumnNames="user_id" baseTableName="WidgetConfig" constraintName="FK_widgetconfig_user" deferrable="false" initiallyDeferred="false" onDelete="CASCADE" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="CVUser"/>
		<addUniqueConstraint tableName="WidgetConfig" columnNames="widgetId,user_id"/>
	</changeSet>
	<changeSet context="production"  id="add-widget-layouts" author="arussell">
		<createTable tableName="WidgetLayout">
			<column autoIncrement="true" startWith="1" name="id" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
			<column defaultValueNumeric="0" name="user_id" type="BIGINT">
				<constraints nullable="false"/>
			</column>
			<column name="layout" type="VARCHAR(1024)"/>
		</createTable>
		<addForeignKeyConstraint baseColumnNames="user_id" baseTableName="WidgetLayout" constraintName="FK_widgetlayout_user" deferrable="false" initiallyDeferred="false" onDelete="CASCADE" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="CVUser"/>
	</changeSet>
</databaseChangeLog>
